.flota_der= link_to 'Nueva temática', new_tematica_path

%h1 Temáticas

%table.ranking
  %tr
    %th Nombre
    %th URL portada
    %th Sección publi
    %th Publicado
    %th
  - collection.each do |tematica|
    %tr
      %td= link_to tematica.nombre, tematica_path(tematica)
      %td= link_to tematica.portada_path, tematica.portada_path
      %td= tematica.seccion_publi
      %td.center= tematica.publicado? ? 'Sí' : 'No'
      %td= render 'links_control', tematica: tematica
