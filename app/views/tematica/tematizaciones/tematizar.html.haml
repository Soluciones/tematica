= simple_form_for @tematizacion, html: { class: 'pure-form-aligned' }, defaults: { wrapper_html: { class: 'pure-control-group' }, hint_html: { class: 'pure-form-message-inline' }, label_html: { class: 'pure-inner-control-group-label width_170px' } } do |f|
  = render 'web/muestra_errores_form', variable: @tematizacion

  = f.input :tematizable_id, as: :hidden
  = f.input :tematizable_type, as: :hidden
  = f.input :tematica_id, input_html: { autofocus: true }, as: :select, collection: desplegable_tematicas

  = f.button :submit, { class: 'form_button boton_azul' }

